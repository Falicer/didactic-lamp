<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Matching App</title>
        <meta name="Matching App" content="Matching site">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="../css/style.css">
    </head>
<body>
     <header>

    </header>

    <div class="split left">
      <img class="logo" src="./images/logo petscout.png">
        <img class="banner" src="../images/foto banner .jpeg">
    </div>

    <div class="split right">

    
        <div class="centered">

        <h1>Registreren</h1>
        
        {{#if success_msg}}
        {{success_msg}}
        {{/if}}

        {{#if error_msg}}
        {{error_msg}}
        {{/if}}

        {{#if error}}
        {{error}}
        {{/if}}


        <h4>Heeft u al een account? <a href="/users/login">Login</a> </h4>

        <form action="/users/register" method="POST">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
          />

          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />

          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
          />

          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
          />
            <button type="submit">Registreren</button>
            
        </form>
        
        </div>

    </div>

        
</body>
</html>