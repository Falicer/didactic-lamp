<ul class="people_list">
  {{#if users }}
  {{!-- Oproepen van data voor de user list met pet --}}
  {{#each users as |users|}}
  <li>
    <form action="/updateUser:{{users._id}}" method="post" name="userCRUD">
      <fieldset>
        <legend>Changing User</legend>
        <label for="petChoice">Change your pet</label>
        <input id="id" name="id" hidden value="{{users._id}}">
        <select id="petChoice" name="petChoice" aria-placeholder="{{users.pet}}">
          <option value="dog">Dog</option>
          <option value="cat">Cat</option>
          <option value="bird">Bird</option>
          <option value="bunny">Bunny</option>
          <option value="hamster">Hamster</option>
        </select>

        <button type="submit">Update User</button>

        <p>{{users.name}} has a {{users.pet}}</p>
      </fieldset>
    </form>
  </li>
  {{/each}}
  {{/if}}
</ul>

<form action="/toChat" method="GET">
  <button type="submit">Chatrooms</button>
</form>